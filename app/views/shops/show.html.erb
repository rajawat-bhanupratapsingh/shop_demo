<div class="container shop-detail">
  <div class="row">
    <div class="col-md-4 left">
      <h4><%= @shop.name %></h4>
      <strong>Addrss:</strong>
      <%= @shop.address %>
      <p class="description">
        <%= @shop.description %>
      </p>
      <%= image_tag @shop.photo.url, class: "photo" %>
    </div>
    <div class="col-md-8 right">
      <div id="map" data-latitude="<%= @shop.latitude %>" data-longitude="<%= @shop.longitude %>" style="height: 600px;"></div>
    </div>
  </div>
</div>

<script type="text/javascript">
  var map;
  var latitude = $('#map').data('latitude');
  var longitude = $('#map').data('longitude');
  $(document).on('ready', function() {
    map = new GMaps({
      div: '#map',
      lat: latitude,
      lng: longitude
    });
    map.addMarker({
      lat: latitude,
      lng: longitude
    });
  });
</script>